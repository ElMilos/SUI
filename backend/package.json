{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server with Sui client and voting agents",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "serve:dev": "ts-node-dev --respawn --transpile-only ./sui/server.ts",
    "agent:dev": "ts-node-dev --respawn --transpile-only ./voting_agent/agent.ts",
    "dev": "concurrently \"npm:serve:dev\" \"npm:agent:dev\"",
    "start:prod": "npm run build && npm run start",
    "lint": "eslint . --ext .ts,.js",
    "test": "jest"
  },
  "dependencies": {
    "@mysten/sui": "^1.36.0",
    "cors": "^2.8.5",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/socket.io": "^3.0.1",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.0",
    "jest": "^30.0.4",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
